{% extends 'base.html.twig' %}

{% block title %}Doctor index{% endblock %}

{% block body %}
    <h1>Doctor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Doc_name</th>
                <th>Doc_surname</th>
                <th>Doc_address</th>
                <th>Doc_phone</th>
                <th>Doc_mobile</th>
                <th>Doc_email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.id }}</td>
                <td>{{ doctor.docName }}</td>
                <td>{{ doctor.docSurname }}</td>
                <td>{{ doctor.docAddress }}</td>
                <td>{{ doctor.docPhone }}</td>
                <td>{{ doctor.docMobile }}</td>
                <td>{{ doctor.docEmail }}</td>
                <td>
                    <a href="{{ path('app_doctor_show', {'id': doctor.id}) }}">show</a>
                    <a href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_doctor_new') }}">Create new</a>
{% endblock %}

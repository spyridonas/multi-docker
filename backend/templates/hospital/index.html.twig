{% extends 'base.html.twig' %}

{% block title %}Hospital index{% endblock %}

{% block body %}
    <h1>Hospital index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hospital_name</th>
                <th>Hospital_address</th>
                <th>Hospital_company</th>
                <th>Hospital_phone</th>
                <th>Hospital_email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospital in hospitals %}
            <tr>
                <td>{{ hospital.id }}</td>
                <td>{{ hospital.hospitalName }}</td>
                <td>{{ hospital.hospitalAddress }}</td>
                <td>{{ hospital.hospitalCompany }}</td>
                <td>{{ hospital.hospitalPhone }}</td>
                <td>{{ hospital.hospitalEmail }}</td>
                <td>
                    <a href="{{ path('app_hospital_show', {'id': hospital.id}) }}">show</a>
                    <a href="{{ path('app_hospital_edit', {'id': hospital.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hospital_new') }}">Create new</a>
{% endblock %}

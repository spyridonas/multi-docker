{% extends 'base.html.twig' %}

{% block title %}Symptom index{% endblock %}

{% block body %}
    <h1>Symptom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Symptom_name</th>
                <th>Symptom_description</th>
                <th>Symptom_severity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for symptom in symptoms %}
            <tr>
                <td>{{ symptom.id }}</td>
                <td>{{ symptom.symptomName }}</td>
                <td>{{ symptom.symptomDescription }}</td>
                <td>{{ symptom.symptomSeverity }}</td>
                <td>
                    <a href="{{ path('app_symptom_show', {'id': symptom.id}) }}">show</a>
                    <a href="{{ path('app_symptom_edit', {'id': symptom.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_symptom_new') }}">Create new</a>
{% endblock %}

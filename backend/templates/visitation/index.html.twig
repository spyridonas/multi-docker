{% extends 'base.html.twig' %}

{% block title %}Visitation index{% endblock %}

{% block body %}
    <h1>Visitation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Isit_doctor</th>
                <th>Visit_department</th>
                <th>Visit_date</th>
                <th>Visit_price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visitation in visitations %}
            <tr>
                <td>{{ visitation.id }}</td>
                <td>{{ visitation.isitDoctor }}</td>
                <td>{{ visitation.visitDepartment }}</td>
                <td>{{ visitation.visitDate ? visitation.visitDate|date('Y-m-d') : '' }}</td>
                <td>{{ visitation.visitPrice }}</td>
                <td>
                    <a href="{{ path('app_visitation_show', {'id': visitation.id}) }}">show</a>
                    <a href="{{ path('app_visitation_edit', {'id': visitation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_visitation_new') }}">Create new</a>
{% endblock %}
